import { useCallback, useEffect, useRef, useState } from "react";
import { useSpecStore } from "../../store/spec-store";
import type { ValidationError } from "../../types/validation";

function toNavigablePath(errorPath: string[]): string[] {
  if (errorPath.length === 0) return [];

  const root = errorPath[0];

  if (root === "info") return ["info"];
  if (root === "tags" && errorPath.length >= 2) return ["tags", errorPath[1]];
  if (root === "servers" && errorPath.length >= 2)
    return ["servers", errorPath[1]];

  if (root === "paths") {
    if (errorPath.length >= 3) return ["paths", errorPath[1], errorPath[2]];
    if (errorPath.length === 2) return ["paths", errorPath[1]];
    return ["paths"];
  }

  if (root === "components" && errorPath.length >= 3) {
    return ["components", errorPath[1], errorPath[2]];
  }

  return errorPath.slice(0, 2);
}

function severityIcon(severity: ValidationError["severity"]): string {
  switch (severity) {
    case "error":
      return "●";
    case "warning":
      return "▲";
    case "info":
      return "ℹ";
  }
}

function severityColor(severity: ValidationError["severity"]): string {
  switch (severity) {
    case "error":
      return "text-red-500";
    case "warning":
      return "text-yellow-500";
    case "info":
      return "text-blue-500";
  }
}

export default function StatusBar() {
  const filePath = useSpecStore((s) => s.filePath);
  const isDirty = useSpecStore((s) => s.isDirty);
  const validation = useSpecStore((s) => s.validation);
  const setSelectedPath = useSpecStore((s) => s.setSelectedPath);

  const [showErrors, setShowErrors] = useState(false);
  const dropdownRef = useRef<HTMLDivElement>(null);

  const handleToggle = useCallback(() => {
    if (validation.errors.length > 0) {
      setShowErrors((prev) => !prev);
    }
  }, [validation.errors.length]);

  const handleErrorClick = useCallback(
    (error: ValidationError) => {
      setSelectedPath(toNavigablePath(error.path));
      setShowErrors(false);
    },
    [setSelectedPath],
  );

  const totalIssues =
    validation.counts.error +
    validation.counts.warning +
    validation.counts.info;

  const isDropdownVisible = showErrors && validation.errors.length > 0;

  return (
    <div className="relative flex h-7 select-none items-center justify-between border-t border-gray-200 bg-gray-100 px-3 text-xs text-gray-600 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400">
      <div className="flex items-center gap-1 truncate">
        <span className="truncate">{filePath ?? "Untitled"}</span>
        {isDirty && (
          <span className="text-yellow-600 dark:text-yellow-400">
            (modified)
          </span>
        )}
      </div>

      <div className="flex items-center gap-3">
        {totalIssues > 0 ? (
          <button
            type="button"
            onClick={handleToggle}
            className="flex items-center gap-2 rounded px-1.5 py-0.5 hover:bg-gray-200 dark:hover:bg-gray-700"
          >
            {validation.counts.error > 0 && (
              <span className="flex items-center gap-0.5 text-red-600 dark:text-red-400">
                <span>●</span>
                <span>{validation.counts.error}</span>
              </span>
            )}
            {validation.counts.warning > 0 && (
              <span className="flex items-center gap-0.5 text-yellow-600 dark:text-yellow-400">
                <span>▲</span>
                <span>{validation.counts.warning}</span>
              </span>
            )}
            {validation.counts.info > 0 && (
              <span className="flex items-center gap-0.5 text-blue-600 dark:text-blue-400">
                <span>ℹ</span>
                <span>{validation.counts.info}</span>
              </span>
            )}
          </button>
        ) : (
          <span className="text-green-600 dark:text-green-400">No issues</span>
        )}
      </div>

      {showErrors && (
        <>
          <div
            className="fixed inset-0 z-40"
            onClick={() => setShowErrors(false)}
          />
          <div
            ref={dropdownRef}
            className="absolute bottom-7 right-0 z-50 max-h-64 w-96 overflow-y-auto rounded-t border border-gray-200 bg-white shadow-lg dark:border-gray-700 dark:bg-gray-800"
          >
            <div className="sticky top-0 border-b border-gray-200 bg-gray-50 px-3 py-1.5 text-xs font-medium text-gray-700 dark:border-gray-700 dark:bg-gray-750 dark:text-gray-300">
              Problems ({totalIssues})
            </div>
            {validation.errors.map((error, i) => (
              <button
                key={`${error.path.join(".")}-${i}`}
                type="button"
                onClick={() => handleErrorClick(error)}
                className="flex w-full items-start gap-2 px-3 py-1.5 text-left hover:bg-gray-100 dark:hover:bg-gray-700"
              >
                <span className={`mt-0.5 shrink-0 ${severityColor(error.severity)}`}>
                  {severityIcon(error.severity)}
                </span>
                <div className="min-w-0 flex-1">
                  <div className="truncate text-gray-800 dark:text-gray-200">
                    {error.message}
                  </div>
                  <div className="truncate text-gray-400 dark:text-gray-500">
                    {error.path.join(" › ")}
                  </div>
                </div>
              </button>
            ))}
          </div>
        </>
      )}
    </div>
  );
}
